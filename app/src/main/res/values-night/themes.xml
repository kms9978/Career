<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JOBHUNT" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->`
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/career_main2</item><!-- 앱 아이콘이나 앱 아이콘의 에니메이션(AnimationDrawable 과 AnimatedVectorDrawable)을 설정한다.-->
        <!-- <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/career_logo</item>-->  <!-- 스플래시 화면의 하단에 보여지는 브랜드 이미지를 설정한다.-->
        <item name="windowSplashScreenAnimationDuration">1000</item><!--뿌려지는 기간-->
        <item name="postSplashScreenTheme">@style/Theme.JOBHUNT</item><!--스플래시 화면을 보여주고, 다음으로 보여지는 테마를 설정한다.-->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>
</resources>